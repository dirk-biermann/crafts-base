<!-- Navbar (sit on top) -->
<div class="w3-top">
  <div class="w3-bar w3-indigo w3-card" id="myNavbar">
      <img class="w3-left" style="padding-top:2px; padding-left: 2px;" id="exp-logo" src="/images/express-logo.png" alt="piranha logo">
      <a href="/" class="w3-left w3-bar-item w3-button w3-wide">{{title}}</a>
    <!-- Right-sided navbar links -->
    <div class="w3-right w3-hide-small-cb">
      <a href="/" class="w3-bar-item w3-button"><i class="fa fa-home fa-pad"></i>HOME</a>
      <a href="/#start" class="w3-bar-item w3-button"><i class="fa fa-list-alt fa-pad"></i>INFO</a>
      {{#if status.logged }}
        <div class="w3-dropdown-hover">
          <div class="w3-button padding-btn"><i class="fa fa-th-large fa-pad"></i>PROJECTS</div>
          <div class="w3-dropdown-content w3-bar-block w3-card">
            <a href="/secret/project/view" class="w3-bar-item w3-button"><i class="fa fa-th-list fa-pad"></i>VIEW PROJECTS</a>
            <a href="/secret/project/create" class="w3-bar-item w3-button"><i class="fa fa-plus fa-pad"></i>CREATE PROJECT</a>
          </div>
        </div>
        <div class="w3-dropdown-hover">
          <div class="w3-button padding-btn"><i class="fa fa-square"></i> COMPONENTS</div>
          <div class="w3-dropdown-content w3-bar-block w3-card">
            <a href="/secret/component/view" class="w3-bar-item w3-button"><i class="fa fa-th-list"></i>VIEW COMPONENTS</a>
            <div class="w3-dropdownsub-hover">
              <div class="w3-button padding-btn"><i class="fa fa-square fa-pad"></i>CREATE COMPONENTS</div>
              <div class="w3-dropdownsub-content w3-bar-block w3-card" style="left: 20%">
                <a href="/secret/component/create/fabric" class="w3-bar-item w3-button"><i class="fa fa-square-o fa-pad"></i>FABRIC</a>
                <a href="/secret/component/create/pattern" class="w3-bar-item w3-button"><i class="fa fa-square-o fa-pad"></i>PATTERN</a>
              </div>
            </div>
          </div>
        </div>
      {{/if}}
      {{#if status.logged }}
        <a href="/logout" class="w3-bar-item w3-button"><i class="fa fa-sign-out fa-pad"></i>LOGOUT</a>
      {{else}}
        {{#if status.login }}
        {{else}}
          <a href="/signup" class="w3-bar-item w3-button"><i class="fa fa-user-plus fa-pad"></i>SIGN UP</a>
          <a href="/login" class="w3-bar-item w3-button"><i class="fa fa-sign-in fa-pad"></i>LOGIN</a>
        {{/if}}
      {{/if}}
      <div class="w3-bar-item w3-button" onclick="document.getElementById('cb-about').style.display='block'"><i class="fa fa-info fa-pad"></i>ABOUT</div>
    </div>
    <!-- Hide right-floated links on small screens and replace them with a menu icon -->

    <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large-cb" onclick="w3_open()">
      <i class="fa fa-bars"></i>
    </a>
  </div>
</div>


