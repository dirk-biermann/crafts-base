<div id="start" class="header-spc"></div>
<div class="w3-container">
    <h2 class="small-caps">Component Choose For Project</h2>
    <hr>
    <div>
        <a href="/secret/project/detail/{{this.project._id}}" class="w3-button w3-blue w3-small"><i class="fa fa-eye fa-pad"></i>Detail</a>
        <a href="/secret/project/view" class="w3-button w3-blue w3-small"><i class="fa fa-eye fa-pad"></i>View Projects</a>    
    </div>

    <form class="w3-margin-bottom" action="/secret/project/addcomponent/{{this.project._id}}" method="POST">
        <h4 class="w3-panel w3-opacity w3-blue">Available Patterns</h4>
        <div class="w3-flex">
            {{#each this.pattern}}
            {{> componentchoose this}}
            {{/each}}
        </div>

        <h4 class="w3-panel w3-opacity w3-blue">Available Fabrics</h4>
        <div class="w3-flex">
            {{#each this.fabric}}
            {{> componentchoose this}}
            {{/each}}
        </div>
        <button class="w3-btn w3-blue" type="submit"><i class="fa fa-plus"></i> Add Selected Component[s]</button>
    </form>
</div>