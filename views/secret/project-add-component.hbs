<div id="start" class="header-spc"></div>
<div class="w3-container">
    <h2 class="small-caps">Component Choose For Project</h2>
    <form class="w3-margin-bottom" action="/secret/project/addcomponent/{{this.project._id}}" method="POST">
        <h4 class="w3-panel w3-opacity w3-blue">Available Patterns</h4>
        <div class="w3-flex">
            {{#each this.pattern}}
            {{> componentchoose this}}
            {{/each}}
        </div>

        <h4 class="w3-panel w3-opacity w3-blue">Available Fabrics</h4>
        <div class="w3-flex">
            {{#each this.fabric}}
            {{> componentchoose this}}
            {{/each}}
        </div>
        <p>
            <button class="w3-button w3-green" type="submit"><i class="fa fa-plus fa-pad"></i>Add Selected Component[s]</button>
            <button class="w3-button w3-dark-gray" type="button" onclick="window.location.assign('/secret/project/detail/{{this.project._id}}');"><i class="fa fa-eye fa-pad"></i>Detail</button>
            <button class="w3-button w3-dark-gray" type="button" onclick="window.location.assign('/secret/project/view');"><i class="fa fa-eye fa-pad"></i>View Projects</button>
        </p>
    </form>
</div>