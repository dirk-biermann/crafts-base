<div id="start" class="header-spc"></div>

<div class="w3-container">
<div class="w3-card w3-round-large w3-margin-bottom w3-white" style="width: 80%; margin-left: 10%; ">
  <div class="w3-container w3-deep-orange w3-margin-bottom">
    <h3 class="small-caps">Detail Fabric</h3>
  </div>
  <form class="w3-padding" action='/secret/component/detail/{{this.fabric._id}}'>
        
    <label class="w3-text-blue"><b>Fabric Name</b></label>
    <input class="w3-input w3-border w3-margin-bottom" name="name" type="text" value="{{this.fabric.name}}" disabled>
         
    <label class="w3-text-blue"><b>Description</b></label>
    <textarea class="w3-input w3-border w3-margin-bottom" maxlength="500" rows="2" name="description" disabled>{{this.fabric.description}}</textarea>
          
    <label class="w3-text-blue"><b>Image</b></label>
    <input class="w3-input w3-border w3-margin-bottom" name="imageUrl" type="url" value="{{this.fabric.imageUrl}}" disabled>
         
    <label class="w3-text-blue"><b>Made of</b></label>
    <input class="w3-input w3-border w3-margin-bottom" name="material" type="text" value="{{this.fabric.material}}" disabled>
    
    <div class="w3-row-padding">
      <div class="w3-half">
        <label class="w3-text-blue"><b>Fabric Length</b></label>
        <input class="w3-input w3-border w3-margin-bottom" name="length" type="number" required value="{{this.fabric.length}}" disabled>
      </div>
      <div class="w3-half">
        <label class="w3-text-blue"><b>Fabric Width</b></label>
        <input class="w3-input w3-border w3-margin-bottom" name="width" type="number" required value="{{this.fabric.width}}" disabled>
      </div>
    </div>

    <label class="w3-text-blue"><b>Main Color</b></label>
    <input class="w3-input w3-border w3-margin-bottom" name="color" type="text" value="{{this.fabric.color}}" disabled>
    
    <label class="w3-text-blue"><b>Pattern</b></label> <br>
    <p><input id="fabric-without-pattern" class="w3-radio w3-border w3-light-grey" name="pattern" type="radio" value="false" {{this.fabric.noPattern}} disabled>Fabric without a pattern</p>
    <p><input id="fabric-with-pattern" class="w3-radio w3-border w3-margin-bottom" name="pattern" type="radio" value="true" {{this.fabric.hasPattern}} disabled>Fabric has a pattern</p>
          
    <p>
    <button class="w3-button w3-blue w3-margin" type="button"><a href="/secret/component/view/">Close</a></button>
    </p>
  </form>
  </div>
</div>
