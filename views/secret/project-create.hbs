<div id="start" class="header-spc"></div>

<div class="w3-container">
  <div class="w3-card w3-round-large w3-margin-bottom w3-white" style="width: 80%; margin-left: 10%; ">
    <div class="w3-container w3-deep-orange w3-margin-bottom">
      <h3 class="small-caps">Create new Project</h2>
    </div>
    
      <form class="w3-padding" action='/secret/project/create' method="POST">
        <label class="w3-text-blue"><b>Project Title</b></label>
        <input class="w3-input w3-border w3-margin-bottom" name="name" type="text" required>

        <label class="w3-text-blue"><b>Description</b></label>
        <textarea class="w3-input w3-border w3-margin-bottom w3-ta-3" maxlength="500" name="description" rows="2"></textarea>

        <label class="w3-text-blue"><b>Notes</b></label>
        <textarea class="w3-input w3-border w3-margin-bottom w3-ta-3" maxlength="500" name="notes" rows="2"></textarea>

        <label class="w3-text-blue"><b>Status</b></label>
        <input class="w3-input w3-border w3-margin-bottom" name="status" type="text" value="New" readonly>

        <p>
          <button class="w3-button w3-blue" type="submit"><i class="fa fa-floppy-o fa-pad"></i>Save</button>
          <button class="w3-button w3-dark-gray" type="button" onclick="window.location.assign('/secret/project/view');"><i class="fa fa-times fa-pad"></i>Close</button>
        </p>
      </form>
    
  </div>
</div>
