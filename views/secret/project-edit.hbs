<div id="start" class="header-spc"></div>
{{#with this.project}}
<div class="w3-container">
  <div class="w3-card w3-round-large w3-margin-bottom w3-white" style="width: 80%; margin-left: 10%; ">
    <div class="w3-container w3-deep-orange w3-margin-bottom">
      <h3 class="small-caps">Project Edit</h3>
    </div>
    
      <form class="w3-padding" action='/secret/project/edit/{{this._id}}' method="POST">
        <label class="w3-text-blue"><b>Project Title</b></label>
        <input class="w3-input w3-border w3-margin-bottom" name="name" type="text" required value="{{this.name}}">

        <label class="w3-text-blue"><b>Description</b></label>
        <textarea class="w3-input w3-border w3-margin-bottom w3-ta-3" maxlength="500" name="description" rows="2">{{this.description}}</textarea>

        <label class="w3-text-blue"><b>Notes</b></label>
        <textarea class="w3-input w3-border w3-margin-bottom w3-ta-3" maxlength="500" name="notes" rows="2">{{this.notes}}</textarea>

        <label class="w3-text-blue"><b>Status</b></label><br>
        <select class="w3-select w3-border w3-margin-bottom" name="status" style="max-width: 200px;">
          <option value="" disabled selected>Choose project status</option>
          <option value="New" {{this.checkedStatus.New}}>New</option>
          <option value="Planned" {{this.checkedStatus.Planned}}>Planned</option>
          <option value="Completed" {{this.checkedStatus.Completed}}>Completed</option>
        </select>
        <p>
          <button class="w3-button w3-blue" type="submit"><i class="fa fa-floppy-o fa-pad"></i>Save</button>
          <button class="w3-button w3-dark-gray" type="button" onclick="window.location.assign('/secret/project/detail/{{this._id}}');"><i class="fa fa-eye fa-pad"></i>Detail</button>
          <button class="w3-button w3-dark-gray" type="button" onclick="window.location.assign('/secret/project/view');"><i class="fa fa-eye fa-pad"></i>View Projects</button>
        </p>
      </form>
    
  </div>
</div>
{{/with}}
