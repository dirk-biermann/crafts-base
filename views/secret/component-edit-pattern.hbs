<div class="w3-container">
  <h2 class="small-caps">Edit Pattern</h2>

  <div class="w3-card-4 w3-padding w3-margin-bottom w3-white" style="width: 80%; ">
    <div class="w3-container w3-deep-orange">
      <h2>Edit Pattern</h2>
    </div>
    <form class="w3-container" action='/secret/component/edit/pattern/{{this._id}}' method="POST">
      <p>
        <label class="w3-text-blue"><b>Pattern Name</b></label>
        <input class="w3-input w3-border w3-light-grey" name="name" type="text" required value="{{this.name}}"></p>
      <p>
        <label class="w3-text-blue"><b>Description</b></label>
        <input class="w3-input w3-border w3-light-grey" name="description" type="text" value="{{this.description}}"></p>
      <p>
        <label class="w3-text-blue"><b>Image</b></label>
        <input class="w3-input w3-border w3-light-grey" name="imageUrl" type="url" value="{{this.imageUrl}}"></p>
      <p>
        <label class="w3-text-blue"><b>Type of Clothing</b></label>
        <input class="w3-input w3-border w3-light-grey" name="typeOfClothes" type="text" required value="{{this.typeOfClothes}}"></p>
      <p>
        <label class="w3-text-blue"><b>Instructions</b></label>
        <input class="w3-input w3-border w3-light-grey" name="instructions" type="text" required value="{{this.instructions}}"></p>
      <p>
        <button class="w3-btn w3-blue" type="submit">Save</button></p>
    </form>
  </div>
    <div>
    <a href="/secret/component/view" class="w3-button w3-wide w3-blue w3-small w3-margin-bottom"><i class="fa fa-eye"></i>
      View Components</a>
  </div>
  </div>
