<div class="w3-container">
{{#with this.project}}
    <h2 class="small-caps">Project Detail</h2>
    <div class="w3-container w3-padding w3-card w3-margin-bottom w3-white">
        <div class="w3-bar">
            <p class="w3-bar-item w3-large w3-border w3-text-indigo">{{this.name}}</p>
            <p class="w3-bar-item"><span class="w3-text-blue">Owner:</span> {{this.owner}}</p>
            <p class="w3-bar-item"><span class="w3-text-blue">Description:</span> {{this.description}}</p>
            <p class="w3-bar-item"><span class="w3-text-blue">Notes:</span> {{this.notes}}</p>
        </div>
        <a href="/secret/project/edit" class="w3-button w3-wide w3-blue w3-small w3-margin-bottom"><i class="fa fa-pencil"></i> Edit</a>
        <a href="#" class="w3-button w3-wide w3-red w3-small w3-margin-bottom"><i class="fa fa-trash"></i> Delete</a>
    </div>
    <div class="w3-margin-bottom">
      {{#each this.components}}
        {{> component this}}
      {{/each}}
    </div>
{{/with}}
  <a href="#header-spc" class="w3-button w3-wide w3-purple w3-small w3-margin-bottom"><i class="fa fa-arrow-up"></i></a>
  <a href="/secret/component/create" class="w3-button w3-wide w3-green w3-small w3-margin-bottom"><i class="fa fa-plus"></i> Add New Component</a>
  <a href="/secret/project/view" class="w3-button w3-wide w3-blue w3-small w3-margin-bottom"><i class="fa fa-eye"></i> View Projects</a>
</div>
