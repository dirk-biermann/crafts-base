<div id="start" class="header-spc"></div>
{{#with this.project}}
<div class="w3-container">
  <h2 class="small-caps">Project Detail</h2>
  <div class="w3-flex">
    <div class="w3-flex-item w3-card w3-white">
      <div class="w3-flex-item-content">
        <div class="w3-margin-bottom">
          <p class="w3-large w3-border w3-text-indigo w3-padding">{{this.name}}</p>
          <p class="w3-bar-item"><span class="w3-text-blue">Description:</span> {{this.description}}</p>
          <p class="w3-bar-item"><span class="w3-text-blue">Notes:</span> {{this.notes}}</p>
          <p class="w3-bar-item"><span class="w3-text-blue">Status:</span> {{this.status}}</p>
          <div class="w3-border" style="padding: 2px; margin: 5px 0;">
            <p class="w3-bar-item"><span class="w3-text-green">Project Id:</span> {{this._id}}</p>
            <p class="w3-bar-item"><span class="w3-text-blue">Owner:</span> {{this.owner}}</p>
          </div>
        </div> 
        <div>
          <a href="/secret/project/view" class="w3-button w3-blue w3-small"><i class="fa fa-eye fa-pad"></i>View Projects</a>
          <a href="/secret/project/edit/{{this._id}}" class="w3-button w3-blue w3-small"><i class="fa fa-pencil fa-pad"></i>Edit</a>
          <a href="/secret/delete/{{this.type}}/{{this._id}}" class="w3-button w3-red w3-small"><i class="fa fa-trash fa-pad"></i>Delete</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="w3-container">
  <div class="w3-margin-bottom">
    <a href="/secret/project/addcomponent/{{this._id}}" class="w3-button w3-green w3-small"><i class="fa fa-plus fa-pad"></i>Assign Component</a>
  </div>
  <div class="w3-flex w3-margin-bottom">
    {{#each this.components.pattern}}
      {{> component this}}
    {{/each}}
    {{#each this.components.fabrics}}
      {{> component this}}
    {{/each}}
  </div>
</div>
<div class="w3-container">
  <a href="#header-spc" class="w3-button w3-wide w3-purple w3-small w3-margin-bottom"><i class="fa fa-arrow-up"></i></a>
</div>
{{/with}}
